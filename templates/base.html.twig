<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Shortler{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block extracss %}
        {% endblock %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-primary-100">
        {% block header %}
            <header class="bg-primary-200 text-3xl text-center font-bold">
            <a href="/">shortler</a>
            </header>
        {% endblock %}
        {% block content %}
        {% endblock %}
        {% block footer %}
            <footer class="bg-primary-300 text-center absolute bottom-0 w-full">© Copyright 2023 shortler.pl All rights reserved.</footer>
        {% endblock %}
    </body>
</html>
